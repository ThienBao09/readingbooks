<div class="mt-4">
    <h3>Cập nhật video</h3>
    <form class="mt-4" method="POST" action="/courses/{{courses._id}}?_method=PUT" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Tên video</label>
            <input type="text" class="form-control" value="{{courses.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{courses.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{courses.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="videoId">Ảnh</label>
            <input type="file" class="form-control-file" name="image">
            <input type="hidden" class="form-control-file" name="ii" value="{{courses.image}}">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>